<?php
function MinMax($numbers)
{
    $min = PHP_INT_MAX;
    $max = 0;
    foreach ($numbers as $key => $number) {
        if ($number > $max)
            $max = $number;
        if ($number < $min)
            $min = $number;
    }
    return $min + $max;
}


        $a = 1;
        $b = 2;
        $c = 3;
        $d = 4;
echo MinMax($a,$b,$c,$d);
?>
